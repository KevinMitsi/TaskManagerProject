<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="492.0" prefWidth="592.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskmanager.controllers.UserPanelViewController">
   <children>
      <TreeView fx:id="treeProcess" layoutY="175.0" onContextMenuRequested="#onRequestMenu" onMouseClicked="#onClickTreeView" prefHeight="314.0" prefWidth="592.0" />
      <Label fx:id="lblBienvenida" alignment="CENTER" contentDisplay="CENTER" layoutX="1.0" layoutY="26.0" prefHeight="30.0" prefWidth="592.0" text="Bienvenido" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <MenuBar layoutY="1.0">
        <menus>
          <Menu mnemonicParsing="false" text="Opciones">
            <items>
                  <RadioMenuItem fx:id="rmiHere" mnemonicParsing="false" text="notifications here">
                     <toggleGroup>
                        <ToggleGroup fx:id="notification" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem fx:id="rmiEmail" mnemonicParsing="false" text="notifications email" toggleGroup="$notification" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="mIExit" mnemonicParsing="false" onAction="#onExitMenuItem" text="Salir" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Tareas">
            <items>
              <MenuItem fx:id="miSearch" mnemonicParsing="false" onAction="#onSearchMenuItem" text="Search" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
